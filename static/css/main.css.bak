:root {
    --colour-black: #000000;
    --colour-white: #ffffff;
    --spacing-mid: 2.5rem;
    --spacing-sm: 0.75rem;
    --font-size-root: 100%;
}

html, 
body {
    font-family: monospace;
    font-size: var(--font-size-root);
}

a,
a:visited {
    color: var(--colour-black);
}

a:hover {
    text-decoration: none;
}

.loadingclass {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: var(--colour-black);
    color: var(--colour-white);
}

.loadingclass:after {
    content: "";
    display: flex;
    position: absolute;
    background-image: url("../img/ajax-loader.svg");
    width: var(--spacing-mid);
    height: var(--spacing-mid);
    background-repeat: no-repeat;
    top: var(--spacing-sm);
    right: var(--spacing-sm);
}

svg {
    overflow: auto;
    min-width: 50vh;
}

svg tspan {
    fill: var(--colour-black);
}

text {
    font-size: 30vw;
}

.outline {
    fill: none;
    stroke: var(--colour-black);
}

.bigcaslon {
    font-family: 'Big Caslon';
}

.calluna-regular {
    font-family: 'Calluna';
}

.cascadiacode-light {
    font-family: 'CascadiaCode-Light';
}

.fette-fraktur {
    font-family: 'FetteFraktur';
}

.helveticaneue-bold {
    font-family: 'Helvetica Neue';
}

.lores-bold {
    font-family: 'LoRes 15 OT';
}

.wsh-grotesk-regular {
    font-family: 'WSH Grotesk';
}

.svg-element .zapfino {
    font-family: 'Zapfino';
    font-size: 20vw;
}

.header__list {
    display: flex;
    list-style: none;
    margin: 0 0 1rem 0;
    padding: 0;
}

.header__list li:not(:last-child) {
    margin-right: 1rem;
}